<%- include('partials/header', { title: 'Edit Post', user: user }) %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg rounded-4 mt-5">
        <div class="card-header bg-primary text-white">
          <h1>Edit Post</h1>
        </div>
        <div class="card-body">
          <form action="/posts/<%= post._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            
            <!-- Title Input -->
            <div class="form-group mb-4">
              <label for="title" class="font-weight-bold">Title</label>
              <input
                type="text"
                class="form-control rounded-3"
                name="title"
                id="title"
                value="<%= post.title %>"
                required
              />
            </div>
            
            <!-- Content Textarea -->
            <div class="form-group mb-4">
              <label for="content" class="font-weight-bold">Content</label>
              <textarea
                class="form-control rounded-3"
                name="content"
                id="content"
                rows="5"
                required
              ><%= post.content %></textarea>
            </div>
            
            <!-- Images Upload Section -->
            <div class="form-group mb-4">
              <label for="images" class="font-weight-bold">Images</label>
              <input
                type="file"
                class="form-control-file"
                name="images"
                id="images"
                multiple
              />
              <div class="mt-3">
                <% post.images.forEach(image => { %>
                  <img
                    src="<%= image.url %>"
                    alt="Post Image"
                    class="img-thumbnail mr-2 mb-3"
                    style="max-width: 150px"
                  />
                <% }) %>
              </div>
            </div>
            
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-lg shadow-sm rounded-pill">
              <i class="fas fa-save"></i> Update Post
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>

<style>
  /* Global Card Styling */
  .card {
    border-radius: 16px;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
  }

  /* Card Header Styling */
  .card-header {
    border-radius: 16px 16px 0 0;
    background-color: #007bff;
  }

  .card-header h1 {
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
  }

  /* Card Body Styling */
  .card-body {
    padding: 2rem;
  }

  /* Form Inputs */
  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-control {
    border-radius: 12px;
    padding: 12px;
    background-color: #f8f9fa;
    border: 1px solid #ddd;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  /* Button Styling */
  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    font-size: 1.1rem;
    padding: 12px 24px;
    border-radius: 50px;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }

  /* Image Styling */
  .img-thumbnail {
    border-radius: 10px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .card-body {
      padding: 1.5rem;
    }

    .card-header h1 {
      font-size: 1.5rem;
    }

    .btn-primary {
      font-size: 1rem;
      padding: 10px 20px;
    }
  }
</style>
