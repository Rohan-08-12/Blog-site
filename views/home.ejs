<%- include('partials/header', { title: 'Home', user: user }) %>

<!-- Hero Section -->
<div
  class="hero-section text-center d-flex align-items-center justify-content-center vh-100 text-white"
  style="
    background-image: url('https://cdn.pixabay.com/photo/2019/06/01/02/14/lake-4243352_1280.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
  "
>
  <div
    style="
      background-color: rgba(0, 0, 0, 0.6);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    "
  ></div>
  <div class="container" style="position: relative">
    <h1 class="display-3 font-weight-bold mb-4">Welcome to Our Blog</h1>
    <p class="lead mb-4">A space where ideas come to life and stories are shared.</p>
    <% if (user) { %>
      <p class="mb-4">
        Hello, <span class="username font-weight-bold"><%= user.username %></span>!
        Weâ€™re glad to have you back.
      </p>
      <a class="btn btn-primary btn-lg mr-2" href="/user/profile" aria-label="Go to profile">
        <i class="fas fa-user"></i> View Your Profile
      </a>
    <% } else { %>
      <p class="mb-4">
        Join us today to start sharing your stories and ideas. 
      </p>
      <a class="btn btn-primary btn-lg mr-2" href="/auth/login" aria-label="Login">
        <i class="fas fa-sign-in-alt"></i> Log In
      </a>
      <a class="btn btn-warning btn-lg" href="/auth/register" aria-label="Register">
        <i class="fas fa-user-plus"></i> Register
      </a>
    <% } %>
  </div>
</div>

<!-- Features Section -->
<div class="container-fluid mt-5">
  <h1 class="text-center font-weight-bold mb-4">Explore Our Features</h1>
  <div class="row">
    <div class="col-md-4">
      <div class="card text-center shadow-sm feature-card">
        <div class="card-body">
          <i class="fas fa-lock fa-3x mb-3" style="color: #ff6f61"></i>
          <h3 class="card-title">Secure Authentication</h3>
          <p class="card-text">
            Enjoy peace of mind with our robust and secure login system.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm feature-card">
        <div class="card-body">
          <i class="fas fa-user-shield fa-3x mb-3" style="color: #6a4c93"></i>
          <h3 class="card-title">Controlled Access</h3>
          <p class="card-text">
            Stay in control of who sees what with customizable access levels.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm feature-card">
        <div class="card-body">
          <i class="fas fa-sign-in-alt fa-3x mb-3" style="color: #ffa600"></i>
          <h3 class="card-title">Effortless Login</h3>
          <p class="card-text">
            A smooth, quick login process for a seamless return.
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card text-center shadow-sm feature-card">
        <div class="card-body">
          <i class="fas fa-sign-out-alt fa-3x mb-3" style="color: #ff6f61"></i>
          <h3 class="card-title">Secure Logout</h3>
          <p class="card-text">
            Exit your account safely to protect your information.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm feature-card">
        <div class="card-body">
          <i class="fas fa-comments fa-3x mb-3" style="color: #6a4c93"></i>
          <h3 class="card-title">Engaging Discussions</h3>
          <p class="card-text">
            Connect with the community by commenting on posts.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm feature-card">
        <div class="card-body">
          <i class="fas fa-upload fa-3x mb-3" style="color: #ffa600"></i>
          <h3 class="card-title">Multi-File Upload</h3>
          <p class="card-text">
            Easily share your files with our intuitive upload feature.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

