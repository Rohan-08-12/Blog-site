<%- include("partials/header.ejs", { title: title, user: user }) %>

<!-- Main Title -->
<h1 class="text-center m-5 p-4 display-4 font-weight-bold text-dark">All Posts [ <%= posts.length %> ]</h1>

<!-- Post List -->
<div class="container-fluid" style="flex-grow: 1;"> <!-- Flex to allow footer to stick at the bottom -->
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

    <% if (posts.length > 0) { %>
      <% posts.forEach(post => { %>
        <div class="col mb-4">
          <div class="card shadow-lg border-0 rounded-3 overflow-hidden h-100" style="max-width: 320px; margin: auto;">
            <% if (post.images && post.images.length > 0) { %>
              <img
                src="<%= post.images[0].url %>"
                class="card-img-top"
                alt="Post Image"
                style="object-fit: cover; height: 220px;" />
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-dark mb-3 font-weight-bold"><%= post.title %></h5>
              <p class="card-text text-muted mb-4">
                <small>by <%= post.author.username %> on <%= post.createdAt.toDateString() %></small>
              </p>
              <p class="card-text text-muted" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                <%= post.description %>
              </p>
              <a href="/posts/<%= post._id %>" class="btn btn-primary btn-lg shadow-sm rounded-pill w-100 mt-auto">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-warning text-center" role="alert">
          No posts available. Check back later!
        </div>
      </div>
    <% } %>

  </div>
</div>

<!-- Footer Section -->
<%- include("partials/footer.ejs") %>

<style>
  /* Ensure full height for the page */
  html, body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  /* Flex to fill available space, footer stays at the bottom */
  .container-fluid {
    flex-grow: 1;
    padding-bottom: 80px; /* Allow space for the footer */
  }

  /* Sticky footer */
  footer {
    margin-top: auto;
  }

  /* Card styling */
  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 12px; /* Rounded card */
    background-color: #ffffff; /* White background */
  }

  .card:hover {
    transform: translateY(-10px); /* Slight hover effect */
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1); /* Soft shadow on hover */
  }

  .card-img-top {
    border-bottom: 2px solid #ddd; /* Border for the image */
  }

  /* Button styles */
  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }

  /* Spacing adjustments */
  .card-body {
    padding: 1.5rem;
  }

  .card-title {
    font-size: 1.25rem;
  }

  .card-text {
    font-size: 0.9rem;
    line-height: 1.5; /* Spacing between lines */
  }

  /* Alert message styling */
  .alert {
    padding: 1rem;
    font-size: 1.1rem;
  }

  /* Center the title and posts for better alignment */
  h1 {
    text-align: center;
    font-size: 2rem;
    color: #343a40;
  }

  /* Custom styling for links */
  a {
    text-decoration: none;
  }

  /* Responsive styling */
  @media (max-width: 576px) {
    .card-title {
      font-size: 1.1rem;
    }
    .card-body {
      padding: 1rem;
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.8rem;
    }
  }

  /* Add subtle background to each card for better contrast */
  .card-body {
    background-color: #f9f9f9;
    border-radius: 12px; /* Rounded body */
  }
</style>
